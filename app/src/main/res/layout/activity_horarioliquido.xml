<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/azulplc"
    tools:context=".horarioliquido">

    <EditText
        android:id="@+id/ehora"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:layout_marginTop="468dp"
        android:layout_marginEnd="104dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bfecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/white"
        android:text="Fecha"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/efecha"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/efecha"
        android:layout_width="157dp"
        android:layout_height="51dp"
        android:layout_marginTop="376dp"
        android:layout_marginEnd="104dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hgastos"
        android:layout_width="401dp"
        android:layout_height="138dp"
        android:layout_marginTop="184dp"
        android:gravity="center"
        android:text="HORARIO"
        android:textColor="@color/black"
        android:textSize="36dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bhora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="468dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/white"
        android:text="Hora"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/ehora"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/agregar"
        android:layout_width="185dp"
        android:layout_height="52dp"
        android:text="Agregar"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.934" />

</androidx.constraintlayout.widget.ConstraintLayout>